connect await ROUTED_SERVER
        "nukleus://streams/amqp#0"
  option nukleus:window 8192
  option nukleus:transmission "duplex"

connected

# header exchange
write "AMQP" [0x00 0x01 0x00 0x00]
read "AMQP" [0x00 0x01 0x00 0x00]

# open frame exchange
write [0x00 0x00 0x00 0x16]                                      # length = 22
      [0x02]                                                     # doff = 2
      [0x00]                                                     # type = AMQP (0)
      [0x00 0x00]                                                # channel = 0
      [0x00 0x53 0x10]                                           # performative = open (16)
      [0xc0 0x09]                                                # list type (LIST1), length = 9
      [0x01]                                                     # field count = 1
      [0xa1 0x06] "client"                                       # container-id = "client"

read [0x00 0x00 0x00 0x16]                                       # length = 22
     [0x02]                                                      # doff = 2
     [0x00]                                                      # type = AMQP (0)
     [0x00 0x00]                                                 # channel = 0
     [0x00 0x53 0x10]                                            # performative = open (16)
     [0xc0 0x09]                                                 # list type (LIST1), length = 9
     [0x01]                                                      # field count = 1
     [0xa1 0x06] "server"                                        # container-id = "server"

# close frame exchange
write [0x00 0x00 0x00 0x0c]                                      # length = 12
      [0x02]                                                     # doff = 2
      [0x00]                                                     # type = AMQP (0)
      [0x00 0x00]                                                # channel = 0
      [0x00 0x53 0x18]                                           # performative = close (24)
      [0x45]                                                     # list type (list0)

read [0x00 0x00 0x00 0x0c]                                       # length = 12
     [0x02]                                                      # doff = 2
     [0x00]                                                      # type = AMQP (0)
     [0x00 0x00]                                                 # channel = 0
     [0x00 0x53 0x18]                                            # performative = close (24)
     [0x45]                                                      # list type (list0)
