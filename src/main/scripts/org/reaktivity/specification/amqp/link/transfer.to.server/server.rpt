property serverTransport "nukleus://streams/target#0"

accept ${serverTransport}
  option nukleus:window 8192
  option nukleus:transmission "duplex"

accepted
connected

# header exchange
read "AMQP" [0x00 0x01 0x00 0x00]
write "AMQP" [0x00 0x01 0x00 0x00]

# open frame exchange
read [0x00 0x00 0x00 0x23]                                        # length = 35
     [0x02]                                                       # doff = 2
     [0x00]                                                       # type = AMQP (0)
     [0x00 0x00]                                                  # channel = 0
     [0x00 0x53 0x10]                                             # performative = open (16)
     [0xc0 0x16]                                                  # list type (LIST1), length = 22
     [0x03]                                                       # field count = 3
     [0xa1 0x06] "client"                                         # container-id = "client"
     [0xa1 0x06] "server"                                         # hostname = "server"
     [0x70 0x00 0x10 0x00 0x00]                                   # max frame size = 1048576

write [0x00 0x00 0x00 0x1c]                                       # length = 28
      [0x02]                                                      # doff = 2
      [0x00]                                                      # type = AMQP (0)
      [0x00 0x00]                                                 # channel = 0
      [0x00 0x53 0x10]                                            # performative = open (16)
      [0xc0 0x0f]                                                 # list type (LIST1), length = 15
      [0x03]                                                      # field count = 3
      [0xa1 0x06] "server"                                        # container-id = "server"
      [0x40]                                                      # hostname = null
      [0x70 0x00 0x00 0x03 0xe8]                                  # max frame size = 1000

# begin frame exchange
read [0x00 0x00 0x00 0x1b]                                        # length = 27
     [0x02]                                                       # doff = 2
     [0x00]                                                       # type = AMQP (0)
     [0x00 0x01]                                                  # channel = 1
     [0x00 0x53 0x11]                                             # performative = begin (17)
     [0xc0 0x0e]                                                  # list type (list8), length = 14
     [0x04]                                                       # field count = 4
     [0x40]                                                       # remote-channel = null
     [0x52 0x01]                                                  # next-outgoing-id = 1
     [0x70 0x00 0x00 0x07 0xff]                                   # incoming-window = 2047
     [0x70 0x7f 0xff 0xff 0xff]                                   # outgoing-window = 2147483647

write [0x00 0x00 0x00 0x1d]                                       # length = 29
      [0x02]                                                      # doff = 2
      [0x00]                                                      # type = AMQP (0)
      [0x00 0x01]                                                 # channel = 1
      [0x00 0x53 0x11]                                            # performative = begin (17)
      [0xc0 0x10]                                                 # list type (list8), length = 16
      [0x04]                                                      # field count = 4
      [0x60 0x00 0x01]                                            # remote-channel = 1
      [0x52 0x01]                                                 # next-outgoing-id = 1
      [0x70 0x00 0x01 0x00 0x00]                                  # incoming-window = 65536
      [0x70 0x7f 0xff 0xff 0xff]                                  # outgoing-window = 2147483647

# attach frame exchange
read [0x00 0x00 0x00 0x3b]                                        # length = 59
     [0x02]                                                       # doff = 2
     [0x00]                                                       # type = AMQP (0)
     [0x00 0x01]                                                  # channel = 1
     [0x00 0x53 0x12]                                             # performative = attach (18)
     [0xc0 0x2e 0x0a]                                             # list (list8), length = 46, field count = 10
     [0xa1 0x05] "link1"                                          # name = "link1"
     [0x43]                                                       # handle = 0
     [0x42]                                                       # role = sender
     [0x50 0x01]                                                  # snd-settle-mode = settled
     [0x50 0x00]                                                  # rcv-settle-mode = first
     [0x00 0x53 0x28 0xc0 0x09 0x01]                              # source list (list8), length = 9, field count = 1
     [0xa1 0x06] "server"                                         # address = "server"
     [0x00 0x53 0x29 0xc0 0x0a 0x01]                              # target list (list8), length = 10, field count = 1
     [0xa1 0x07] "clients"                                        # address = "clients"
     [0x40]                                                       # unsettled = null
     [0x40]                                                       # incomplete-unsettled = null (default = false)
     [0x43]                                                       # initial-delivery-count = 0

write [0x00 0x00 0x00 0x38]                                       # length = 56
      [0x02]                                                      # doff = 2
      [0x00]                                                      # type = AMQP (0)
      [0x00 0x01]                                                 # channel = 1
      [0x00 0x53 0x12]                                            # performative = attach (18)
      [0xc0 0x2b 0x07]                                            # list (list8), length = 43, field count = 7
      [0xa1 0x05] "link1"                                         # name = "link1"
      [0x43]                                                      # handle = 0
      [0x41]                                                      # role = receiver
      [0x50 0x01]                                                 # snd-settle-mode = settled
      [0x50 0x00]                                                 # rcv-settle-mode = first
      [0x00 0x53 0x28 0xc0 0x09 0x01]                             # source list (list8), length = 9, field count = 1
      [0xa1 0x06] "server"                                        # address = "server"
      [0x00 0x53 0x29 0xc0 0x0a 0x01]                             # target list (list8), length = 10, field count = 1
      [0xa1 0x07] "clients"                                       # address = "clients"

# flow frame
write [0x00 0x00 0x00 0x20]                                       # length = 32
      [0x02]                                                      # doff = 2
      [0x00]                                                      # type = AMQP (0)
      [0x00 0x01]                                                 # channel = 1
      [0x00 0x53 0x13]                                            # performative = flow (19)
      [0xc0 0x13 0x07]                                            # list type (list8), length = 19, field count = 7
      [0x52 0x01]                                                 # next-incoming-id = 1
      [0x70 0x00 0x01 0x00 0x00]                                  # incoming-window = 65536
      [0x52 0x01]                                                 # next-outgoing-id = 1
      [0x70 0x7f 0xff 0xff 0xff]                                  # outgoing-window = 2147483647
      [0x43]                                                      # handle
      [0x43]                                                      # delivery-count = 0
      [0x52 0x08]                                                 # link-credit = 8

# transfer frame
read [0x00 0x00 0x00 0x22]                                        # length = 34
     [0x02]                                                       # doff = 2
     [0x00]                                                       # type = AMQP (0)
     [0x00 0x01]                                                  # channel = 1
     [0x00 0x53 0x14]                                             # performative = transfer (20)
     [0xc0 0x08 0x05]                                             # list type (list8), length = 8, field count = 5
     [0x43]                                                       # handle = 0
     [0x43]                                                       # delivery-id = 0
     [0xa0 0x01 0x30]                                             # delivery-tag = "0"
     [0x43]                                                       # message-format = 0
     [0x41]                                                       # settled = true
     [0x00 0x53 0x77 0xb0 0x00 0x00 0x00 0x05] "Text!"            # payload = "Text!"
