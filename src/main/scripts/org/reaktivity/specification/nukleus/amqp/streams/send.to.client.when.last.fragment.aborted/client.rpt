connect await ROUTED_CLIENT
        "nukleus://streams/amqp#0"
        option nukleus:window 8192
        option nukleus:transmission "duplex"

write nukleus:begin.ext ${amqp:beginEx()
                              .typeId(nukleus:id("amqp"))
                              .address("clients")
                              .capabilities("RECEIVE_ONLY")
                              .senderSettleMode("SETTLED")
                              .receiverSettleMode("FIRST")
                              .build()}

read nukleus:begin.ext ${amqp:beginEx()
                             .typeId(nukleus:id("amqp"))
                             .address("clients")
                             .capabilities("RECEIVE_ONLY")
                             .senderSettleMode("SETTLED")
                             .receiverSettleMode("FIRST")
                             .build()}
connected

read nukleus:data.ext ${amqp:dataEx()
                            .typeId(nukleus:id("amqp"))
                            .deliveryTag("")
                            .messageFormat(0)
                            .flags("SETTLED")
                            .bodyKind("VALUE_BINARY32")
                            .deferred(300 - 100)
                            .build()}

read option nukleus:flags "init"
read [0..100]

read option nukleus:flags "none"
read [0..100]

read option nukleus:flags "incomplete"
read [0..100]

read option nukleus:flags "auto"

read nukleus:data.ext ${amqp:dataEx()
                            .typeId(nukleus:id("amqp"))
                            .deliveryTag("")
                            .messageFormat(0)
                            .flags("SETTLED")
                            .bodyKind("VALUE_BINARY8")
                            .build()}
read [0..10]

read closed
